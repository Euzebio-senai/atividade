{
  "name": "calculadora-imc-profissional",
  "version": "1.0.0",
  "description": "Aplicação Node.js profissional para calcular IMC com múltiplos temas, idiomas e recursos PWA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "npm run optimize-css && npm run optimize-js",
    "optimize-css": "cleancss -o public/styles.min.css public/styles.css",
    "optimize-js": "uglifyjs public/sw.js -o public/sw.min.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "validate": "npm run lint && npm test"
  },
  "keywords": [
    "nodejs", 
    "express", 
    "imc", 
    "bmi", 
    "body-parser", 
    "html", 
    "css", 
    "javascript",
    "pwa",
    "service-worker",
    "multi-theme",
    "internationalization",
    "health",
    "calculator",
    "responsive",
    "accessibility"
  ],
  "author": {
    "name": "Desenvolvedor",
    "email": "dev@example.com",
    "url": "https://github.com/developer"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/developer/imc-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/developer/imc-calculator/issues"
  },
  "homepage": "https://github.com/developer/imc-calculator#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
